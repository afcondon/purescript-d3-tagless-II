{
  "name": "purescript-d3-dataviz",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "generate-snippets": "node scripts/generate-code-snippets.js",

    "build": "npm run generate-snippets && npm run build:demo",
    "build:all-libs": "spago build -p psd3-tree -p psd3-selection -p psd3-layout -p psd3-simulation -p psd3-music -p psd3-tidal",
    "build:libs": "spago build -p psd3-tree -p psd3-selection -p psd3-layout -p psd3-simulation",
    "build:demo": "spago build -p demo-website",
    "build:ce": "spago build -p ce-website",
    "build:ce2": "spago build -p ce2-website",
    "build:ce-server": "spago build -p ce-server",
    "build:tidal": "spago build -p psd3-tidal",

    "bundle": "spago bundle -p demo-website --module PSD3.Main --outfile ../docs/bundle.js",
    "bundle:ce": "spago bundle -p ce-website --module Main --outfile public/bundle.js",

    "dev": "npm run build:demo && npm run bundle",
    "dev:ce": "npm run build:ce && npm run bundle:ce",

    "serve": "npx http-server docs -p 1234",
    "serve:ce": "npx http-server ce-website/public -p 1235",
    "serve:ce-api": "node ce-server/run.js",

    "test": "spago test",
    "test:libs": "spago test -p psd3-selection -p psd3-simulation -p psd3-layout -p psd3-tidal",
    "test:tidal": "spago test -p psd3-tidal",

    "clean": "rm -rf output",
    "clean:bundles": "rm -f docs/bundle.js ce-website/public/bundle.js",
    "clean-build": "npm run clean && spago build",

    "install": "spago install",
    "upgrade-set": "spago upgrade-set",

    "docs:api": "spago docs --format html && node scripts/filter-api-docs.js",
    "docs:api:open": "spago docs --format html --open",
    "docs:api:local": "npm run docs:api && open docs/api/index.html",

    "graph:dot": "spago graph modules --dot",
    "graph:json": "spago graph modules --json && spago graph packages --json",
    "graph:topo": "spago graph modules --topo",

    "load-ce-db": "node ce-database/loader/load-from-json.js",
    "generate-spago-data": "node scripts/generate-spago-data.js",
    "copy-sources": "mkdir -p docs/sources && cp -r psd3-selection/src/PSD3 docs/sources/",
    "convert-about": "node scripts/convert-about.js",

    "versions": "spago --version && npm --version"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cbor": "^10.0.11",
    "cssnano": "^7.1.1",
    "http-server": "^14.1.1",
    "marked": "^16.4.1",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "tailwindcss": "^3.4.16"
  },
  "dependencies": {
    "d3-array": "^3.2.4",
    "d3-brush": "^3.0.0",
    "d3-chord": "^3.0.1",
    "d3-color": "^3.1.0",
    "d3-drag": "^3.0.0",
    "d3-ease": "^3.0.1",
    "d3-force": "^3.0.0",
    "d3-hierarchy": "^3.1.2",
    "d3-interpolate": "^3.0.1",
    "d3-sankey": "^0.12.3",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.1.0",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.2.0",
    "d3-transition": "^3.0.1",
    "d3-zoom": "^3.0.0",
    "duckdb": "^1.4.2",
    "esbuild": "^0.25.10",
    "purescript": "^0.15.15",
    "purs-tidy": "^0.11.1",
    "spago": "^0.93.44"
  }
}
