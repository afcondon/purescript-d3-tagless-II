    "postcss-nesting": "^13.0.2",
    "tailwindcss": "^3.4.16"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "d3-color": "^3.0.1",
    "d3-interpolate": "^3.0.1",
    "d3-sankey": "^0.12.3",
    "d3-scale-chromatic": "^3.1.0",
    "esbuild": "^0.25.10",
    "purescript": "^0.15.15",
    "spago": "^0.21.0",
    "yarn": "^1.22.22"
  }
}
